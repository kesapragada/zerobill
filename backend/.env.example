# zerobill/backend/.env.example

# MongoDB Connection String
MONGO_URI=mongodb://localhost:27017/zerobill_dev

# JWT Configuration
JWT_SECRET=replace_with_a_very_strong_random_secret_key
JWT_EXPIRES_IN=7d

# Email Service (Ethereal for dev, Mailgun/Brevo for prod)
# Create a test account at https://ethereal.email/
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=your_ethereal_username@ethereal.email
EMAIL_PASS=your_ethereal_password
EMAIL_FROM="ZeroBill Support <support@zerobill.com>"

# Frontend URL for generating reset links
FRONTEND_URL=http://localhost:5173
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS Credentials for the ZeroBill Application (Worker)
# These credentials need sts:AssumeRole permissions on the user's role.
AWS_ACCESS_KEY_ID=YourAppAccessKeyID
AWS_SECRET_ACCESS_KEY=YourAppSecretAccessKey
AWS_REGION=us-east-1
