#zerobill/backend/.env.example

# MongoDB Connection String (Using 'zerobill_prod' for production database)
MONGO_URI=YOUR_MONGO_URI_HERE
# JWT Configuration
JWT_SECRET=YOUR_PRODUCTION_JWT_SECRET_PLACEHOLDER
JWT_EXPIRES_IN=7d

# Production Email Service (SendGrid)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=YOUR_PROD_SENDGRID_API_KEY_PLACEHOLDER
EMAIL_FROM="ZeroBill Support <noreply@zerobill.com>"
EMAIL_REPLY_TO="support@zerobill.com"


# Public URL of your deployed React frontend
FRONTEND_URL=https://zerobill-nu.vercel.app

# Production Redis Configuration (Using public endpoint)
REDIS_HOST=YOUR_PROD_REDIS_HOST_PLACEHOLDER
REDIS_PORT=13153
REDIS_PASSWORD=YOUR_PROD_REDIS_PASSWORD_PLACEHOLDER

# AWS Credentials (MOCK MODE ENABLED)
AWS_ACCESS_KEY_ID=YOUR_APP_IAM_ACCESS_KEY_ID_PLACEHOLDER
AWS_SECRET_ACCESS_KEY=YOUR_APP_IAM_SECRET_ACCESS_KEY_PLACEHOLDER
AWS_REGION=us-east-1
MOCK_AWS=true
